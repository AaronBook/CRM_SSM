<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.crm.mapper.UserMapper">
	
	<select id="login" parameterType="cn.itcast.crm.pojo.User" resultType="cn.itcast.crm.pojo.User">
		SELECT 	* FROM 	`ssh`.`s_user` WHERE username=#{username} AND PASSWORD=#{password}
	</select>
	
	
	<select id="querAll" resultType="cn.itcast.crm.pojo.User">
		SELECT 	* FROM 	`ssh`.`s_user`		
	</select>
</mapper>